FROM node:22-alpine

# Install Java
RUN apk add --no-cache openjdk11

WORKDIR /app

# Install Firebase tools
RUN npm install -g firebase-tools@14.2.1

# Copy Firebase configuration files
COPY firebase.json ./
COPY firestore.rules ./
COPY firestore.indexes.json ./

# Expose Firebase emulator ports
EXPOSE 9099 8080 5001 4000

# Start Firebase emulators in non-interactive mode
CMD ["firebase", "emulators:start", "--only", "auth,firestore,ui", "--project", "sunorank", "--non-interactive"]